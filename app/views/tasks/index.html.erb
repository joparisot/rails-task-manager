<h1>Those are all the tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.name + ': '%><%= link_to("view", task_path(task))  %> <%=link_to("edit", edit_task_path(task))  %> <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"}  %></li>
  <% end %>
</ul>

<p><%= link_to "Create a new task", new_task_path %></p>


